@model BitClassroom.DAL.Models.Course

@{
    ViewBag.Title = "Details";
}


<div>
    <h4 style="padding-top:25px">Course Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Course Name:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<p id="CoursesDetailsLinks">

    
    @if (User.IsInRole("Admin"))
    {
       <p> @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) | 
           @Html.ActionLink("Back to List", "Index") </p>
    }
    else
    {
        @Html.ActionLink("Back to List", "Index");
    }


</p>
